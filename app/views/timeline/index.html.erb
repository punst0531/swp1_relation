<h1>Timeline</h1>
<%=form_tag '/write' , method: 'post' do %>
    <div class="form-group">
    <textarea name="naeyong" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
    <input type="submit" class="btn btn-success">
    </div>
<% end %>

<ul>
    <% @blogs.each do |b| %>
    <li>
        
        <p class="bg-info"><%=b.user.email%> : </p>
    <div class="well">
        <%=b.content%> <a href="/timeline/destroy?id=<%=b.id%>"> 삭제 </a> 
    </div>
        
        
        <%=form_tag '/comment', class: "form-inline" do%>
        <input type="hidden" name="blog_id" value="<%=b.id%>">
        <div class="form-group">
            <input type="text" name="comment" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary">
        </div>
        <% end %>
        <ol>
        <% b.comments.each do |c| %>
            <li><%= c.user.email%> : <%=c.msg%></li> <%=b.content%> <a href="/timeline/commentdestroy?id=<%=c.id%>">삭제 </a>
        <% end %>    
        </ol>
    </li>
    <% end %>
</ul>